<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ProfileHeader" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#673AB7</item>
    </style>
    <style name="ProfileTextFields" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="endIconMode">clear_text</item>
    </style>
    <style name="ProfileTextFieldFonts" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
    <style name="SettingsFontColor" parent="TextAppearance.AppCompat">
        <item name="android:color">@color/hot_purple</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="PasswordTextField" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="endIconMode">password_toggle</item>
        <item name="endIconTint"> @color/grey_700</item>

    </style>

    <style name="Widget.Task.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>
</resources>
