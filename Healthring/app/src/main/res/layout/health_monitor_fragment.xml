<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="healthMonitorFragment"
            type="com.example.healthring.healthmonitor.HealthMonitorFragment" />
        <variable
            name="dataViewModel"
            type="com.example.healthring.model.DataViewModel" />
        <variable
            name="healthMonitorViewModel"
            type="com.example.healthring.healthmonitor.HealthMonitorViewModel" />
        <import type="android.view.View"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"
            android:background="@drawable/header_semicircle_background">

            <TextView
                android:id="@+id/health_ring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="HealthRing"
                android:layout_marginLeft="18dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="normal"
                android:fontFamily="@font/roboto_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/profile_picture_button"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- ImageView for HealthRing Logo, update later with transparent one -->
            <ImageView
                android:id="@+id/health_ring_logo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:scaleX="1.4"
                android:scaleY="1.4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/logo_transparent" />

            <ImageButton
                android:id="@+id/profile_picture_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                app:srcCompat="@drawable/profile_icon"
                app:tint="@color/black"
                android:backgroundTint="@color/hot_purple"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:onClick="@{() -> healthMonitorFragment.goToProfileFragment()}" />

            <ImageButton
                android:id="@+id/settings_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/settings_icon"
                app:tint="@color/black"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:backgroundTint="@color/hot_purple"
                app:layout_constraintTop_toTopOf="@+id/profile_picture_button"
                app:layout_constraintBottom_toBottomOf="@+id/profile_picture_button"
                app:layout_constraintStart_toEndOf="@+id/profile_picture_button"
                android:onClick="@{() -> healthMonitorFragment.goToSettingsFragment()}"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <ScrollView
            android:id="@+id/health_sensor_scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/header_container"
            app:layout_constraintBottom_toTopOf="@id/health_nav_container"
            tools:layout_editor_absoluteX="-31dp">

            <LinearLayout
                android:id="@+id/health_sensor_l_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp">

                <TextView
                    android:id="@+id/sdfsdf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Health Monitor"
                    android:textAlignment="center"
                    android:textColor="@color/hot_purple"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@{healthMonitorViewModel.hRateColor}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:background="@drawable/green_border">

                    <TextView
                        android:id="@+id/heart_rate_tracker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/heart_rate_graph_btn"
                        android:afterTextChanged="@{() -> healthMonitorFragment.updateHeartRateColor()}"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@{dataViewModel.heart_rate.toString() + ` bpm`}"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="55sp"
                        tools:text="140 bpm" />

                    <ImageButton
                        android:id="@+id/heart_rate_graph_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/heart_rate_tracker"
                        android:layout_alignParentEnd="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:onClick="@{() -> healthMonitorFragment.goToHeartRateGraph()}"
                        android:src="@drawable/graph_icon"
                        android:visibility="@{dataViewModel.isLoadingGraphData ? View.INVISIBLE : View.VISIBLE}" />

                    <ProgressBar
                        style="@android:style/Widget.Material.ProgressBar.Large"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:padding="11dp"
                        android:indeterminateTint="@color/black"
                        android:visibility="@{dataViewModel.isLoadingGraphData ? View.VISIBLE : View.INVISIBLE}"
                        tools:visibility="gone"/>

                </RelativeLayout>


                <TextView
                    android:id="@+id/heart_rate_tracker_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Heart Rate"
                    android:textAlignment="center"
                    android:textColor="@color/hot_purple"
                    android:textSize="24sp"
                    app:layout_constraintTop_toBottomOf="@id/heart_rate_tracker" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:background="@{healthMonitorViewModel.bPressureColor}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/blood_pressure_tracker"
                    tools:background="@drawable/blue_border">

                    <TextView
                        android:id="@+id/blood_pressure_tracker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/blood_p_graph_btn"
                        android:afterTextChanged="@{() -> healthMonitorFragment.updateBloodPressureColor()}"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@{dataViewModel.blood_pressure.toString()}"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="55sp"
                        tools:text="90 bp" />

                    <ImageButton
                        android:id="@+id/blood_p_graph_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/blood_pressure_tracker"
                        android:layout_alignParentEnd="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:onClick="@{() -> healthMonitorFragment.goToBloodPressureGraph()}"
                        android:src="@drawable/graph_icon"
                        android:visibility="@{dataViewModel.isLoadingGraphData ? View.INVISIBLE : View.VISIBLE}" />

                    <ProgressBar
                        style="@android:style/Widget.Material.ProgressBar.Large"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:padding="11dp"
                        android:indeterminateTint="@color/black"
                        android:visibility="@{dataViewModel.isLoadingGraphData ? View.VISIBLE : View.INVISIBLE}"
                        tools:visibility="gone"/>


                </RelativeLayout>

                <TextView
                    android:id="@+id/blood_pressure_tracker_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Blood Pressure"
                    android:textAlignment="center"
                    android:textColor="@color/hot_purple"
                    android:textSize="24sp"
                    app:layout_constraintTop_toBottomOf="@id/blood_pressure_tracker" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:background="@{healthMonitorViewModel.bOxygenColor}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/blood_pressure_tracker"
                    tools:background="@drawable/red_border">

                    <TextView
                        android:id="@+id/blood_oxygen_tracker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_toStartOf="@id/blood_o_graph_btn"
                        android:afterTextChanged="@{() -> healthMonitorFragment.updateBloodOxygenColor()}"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@{dataViewModel.blood_oxygen.toString() + ` %`}"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="55sp"
                        tools:text="80%" />

                    <ImageButton
                        android:id="@+id/blood_o_graph_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/blood_oxygen_tracker"
                        android:layout_alignParentEnd="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:onClick="@{() -> healthMonitorFragment.goToBloodOxygenGraph()}"
                        android:src="@drawable/graph_icon"
                        android:visibility="@{dataViewModel.isLoadingGraphData ? View.INVISIBLE : View.VISIBLE}" />

                    <ProgressBar
                        style="@android:style/Widget.Material.ProgressBar.Large"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="11dp"
                        android:layout_alignParentEnd="true"
                        android:indeterminateTint="@color/black"
                        android:visibility="@{dataViewModel.isLoadingGraphData ? View.VISIBLE : View.INVISIBLE}"
                        tools:visibility="gone" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/blood_oxygen_tracker_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Blood Oxygen"
                    android:textAlignment="center"
                    android:textColor="@color/hot_purple"
                    android:textSize="24sp"
                    app:layout_constraintTop_toBottomOf="@id/blood_pressure_tracker" />

                <LinearLayout
                    android:id="@+id/sensor_color_bubbles"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/blood_oxygen_tracker_title">

                    <TextView
                        android:id="@+id/sensor_low_bubble"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/blue_border"
                        android:text="LOW"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/sensor_normal_bubble"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/green_border"
                        android:text="NORMAL"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/sensor_high_bubble"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/amber_border"
                        android:text="HIGH"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/sensor_critical_bubble"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/red_border"
                        android:text="CRITICAL"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/health_nav_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/hot_purple">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/health_monitor_button"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:text="Health Moniter"
                android:backgroundTint="@color/hot_purple"
                android:textSize="18sp"
                app:srcCompat="@drawable/health_icon"
                app:tint="@color/black" />

            <ImageButton
                android:id="@+id/fitness_tracker_button"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="2dp"
                android:text="Fitness Tracker"
                android:backgroundTint="@color/hot_purple"
                android:textSize="18sp"
                app:srcCompat="@drawable/fitness_icon"
                app:tint="@color/black"
                android:onClick="@{() -> healthMonitorFragment.goToFitnessFragment()}"/>

            <ImageButton
                android:id="@+id/todays_task_button"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:text="Today's Task"
                android:backgroundTint="@color/hot_purple"
                android:textSize="18sp"
                app:srcCompat="@drawable/tasks_icon"
                app:tint="@color/black"
                android:onClick="@{() -> healthMonitorFragment.goToTaskFragment()}"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>