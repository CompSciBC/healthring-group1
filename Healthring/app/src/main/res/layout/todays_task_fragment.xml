<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="todaysTasksFragment"
            type="com.example.healthring.todaytasks.TodaysTasksFragment" />
        <variable
            name="todaysTasksViewModel"
            type="com.example.healthring.todaytasks.TodaysTasksViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"
            android:background="@drawable/header_semicircle_background">

            <TextView
                android:id="@+id/health_ring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="HealthRing"
                android:layout_marginLeft="18dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="normal"
                android:fontFamily="@font/roboto_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/profile_picture_button"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- ImageView for HealthRing Logo, update later with transparent one -->
            <ImageView
                android:id="@+id/health_ring_logo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:scaleX="1.4"
                android:scaleY="1.4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/logo_transparent" />

            <ImageButton
                android:id="@+id/profile_picture_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                app:srcCompat="@drawable/profile_icon"
                app:tint="@color/black"
                android:backgroundTint="@color/hot_purple"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:onClick="@{() -> todaysTasksFragment.goToProfileFragment()}" />

            <ImageButton
                android:id="@+id/settings_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/settings_icon"
                app:tint="@color/black"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:backgroundTint="@color/hot_purple"
                app:layout_constraintTop_toTopOf="@+id/profile_picture_button"
                app:layout_constraintBottom_toBottomOf="@+id/profile_picture_button"
                app:layout_constraintStart_toEndOf="@+id/profile_picture_button"
                android:onClick="@{() -> todaysTasksFragment.goToSettingsFragment()}"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/tasks_sensor_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/header_container"
        app:layout_constraintBottom_toTopOf="@id/tasks_nav_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp">

            <TextView
                android:id="@+id/tasks_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Task Tracker"
                android:textColor="@color/hot_purple"
                android:textSize="36sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_regular" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/item_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:hint="Medication"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/item_date"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textSize="16sp"
                        android:hint="03/12/2022"
                        app:layout_constraintTop_toBottomOf="@id/item_title"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/item_time"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textSize="16sp"
                        android:hint="07:15 PM"
                        app:layout_constraintTop_toBottomOf="@id/item_title"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/item_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textSize="16sp"
                        android:hint="Take 2 tablets after food."
                        app:layout_constraintTop_toBottomOf="@id/item_date"
                        app:layout_constraintStart_toStartOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/item_title2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:hint="Doctor's visit"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/item_date2"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textSize="16sp"
                        android:hint="04/01/2022"
                        app:layout_constraintTop_toBottomOf="@id/item_title2"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/item_time2"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textSize="16sp"
                        android:hint="09:00 AM"
                        app:layout_constraintTop_toBottomOf="@id/item_title2"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/item_notes2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textSize="16sp"
                        android:hint="Swedish Edmonds Campus."
                        app:layout_constraintTop_toBottomOf="@id/item_date2"
                        app:layout_constraintStart_toStartOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:src="@android:drawable/ic_input_add"
        android:backgroundTint="@color/hot_purple"
        app:layout_constraintBottom_toTopOf="@id/tasks_nav_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/white"
        app:borderWidth="0dp"
        android:onClick="@{() -> todaysTasksFragment.goToAddTaskFragment()}"/>

    <LinearLayout
        android:id="@+id/tasks_nav_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/hot_purple">

        <ImageButton
            android:id="@+id/health_monitor_button"
            android:layout_width="110dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="Health Moniter"
            android:backgroundTint="@color/hot_purple"
            android:textSize="18sp"
            app:srcCompat="@drawable/health_icon"
            app:tint="@color/black"
            android:onClick="@{() -> todaysTasksFragment.goToHealthMonitorFragment()}"/>

        <ImageButton
            android:id="@+id/fitness_tracker_button"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:text="Fitness Tracker"
            android:backgroundTint="@color/hot_purple"
            android:textSize="18sp"
            app:srcCompat="@drawable/fitness_icon"
            app:tint="@color/black"
            android:onClick="@{() -> todaysTasksFragment.goToFitnessFragment()}"/>

        <ImageButton
            android:id="@+id/todays_task_button"
            android:layout_width="110dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:text="Today's Task"
            android:backgroundTint="@color/hot_purple"
            android:textSize="18sp"
            app:srcCompat="@drawable/tasks_icon"
            app:tint="@color/black"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>