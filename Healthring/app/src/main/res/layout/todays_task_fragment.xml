<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="todaysTasksFragment"
            type="com.example.healthring.todaytasks.TodaysTasksFragment" />
        <variable
            name="todaysTasksViewModel"
            type="com.example.healthring.todaytasks.TodaysTasksViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_background_selector"
        android:padding="24dp">

    <TextView
        android:id="@+id/health_ring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HealthRing"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/health_ring_logo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/health_ring"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/logo_transparent" />

    <TextView
        android:id="@+id/todays_tasks_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today's Task"
        android:textColor="@color/white"
        android:textSize="48sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/health_ring" />

    <ImageButton
        android:id="@+id/profile_picture_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="@{() -> todaysTasksFragment.goToProfileFragment()}" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/todays_tasks_header"
        app:layout_constraintBottom_toTopOf="@id/fitness_tracker_button">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/item_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:hint="Title"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/item_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:hint="Description"
                        app:layout_constraintTop_toBottomOf="@id/item_title"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/item_date"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:hint="Date"
                        app:layout_constraintTop_toBottomOf="@id/item_notes"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/item_time"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:hint="Time"
                        app:layout_constraintTop_toBottomOf="@id/item_notes"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>



        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/new_task_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@id/todays_task_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_baseline_add_alarm_24"
        android:onClick="@{() -> todaysTasksFragment.goToAddTaskFragment()}"/>

    <Button
        android:id="@+id/health_monitor_button"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Health Moniter"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="@{() -> todaysTasksFragment.goToHealthMonitorFragment()}"/>

    <Button
        android:id="@+id/fitness_tracker_button"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Fitness Tracker"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/todays_task_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/health_monitor_button"
        android:onClick="@{() -> todaysTasksFragment.goToFitnessFragment()}"/>

    <Button
        android:id="@+id/todays_task_button"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="Today's Task"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    </layout>