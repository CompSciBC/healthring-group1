<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="fragment"
            type="com.example.healthring.settings.ResetPasswordConfirmcodeFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="24dp">

        <LinearLayout
            android:id="@+id/confirmcode_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="24sp"
                android:layout_marginBottom="20dp"
                android:text="To reset password, please enter the confirmation code sent to your email and your new password."/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/signup_confirm_code"
                android:layout_gravity="center"
                style="@style/ProfileTextFields">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/ProfileTextFieldFonts"
                    tools:text="987654"
                    android:hint="Confirmation Code"
                    android:inputType="number"
                    android:afterTextChanged="@{(editable)->fragment.updateConfirmCode(editable)}"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/reset_password"
                android:layout_gravity="center"
                style="@style/ProfileTextFields">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/ProfileTextFieldFonts"
                    tools:text="password321"
                    android:hint="Choose a Password"
                    android:inputType="textPassword"
                    android:afterTextChanged="@{(edtitable)->fragment.updatePassword(edtitable)}"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/reset_reenter_password"
                android:layout_gravity="center"
                style="@style/ProfileTextFields">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/ProfileTextFieldFonts"
                    tools:text="password321"
                    android:hint="Re-Enter the Password"
                    android:inputType="textPassword"
                    android:afterTextChanged="@{(edtitable)->fragment.updateReenteredPassword(edtitable)}"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/signup_confirm_button"
                android:layout_width="wrap_content"
                android:paddingHorizontal="110dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:textSize="13sp"
                android:fontFamily="@font/roboto"
                tools:text="Confirm"
                android:text="Confirm"
                app:backgroundTint="@color/hot_purple"
                android:textColor="#FFFFFF"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:onClick="@{() -> fragment.resetPassword()}"/>

            <Button
                android:id="@+id/signup_back_to_login_button"
                android:layout_width="match_parent"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_height="64dp"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/signup_confirm_button"
                android:textSize="16sp"
                android:fontFamily="@font/roboto"
                tools:text="Back to login"
                android:text="Back to login"
                app:backgroundTint="@color/hot_purple"
                android:textColor="#FFFFFF"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:onClick="@{() -> fragment.navigateBack()}"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>