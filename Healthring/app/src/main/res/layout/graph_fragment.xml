<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="graphFragment"
            type="com.example.healthring.analytics.GraphFragment" />
        <variable
            name="dataViewModel"
            type="com.example.healthring.model.DataViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/plot_title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{graphFragment.plotTitle}"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="50sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <Spinner
                android:id="@+id/data_select_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp">
            </Spinner>
        </LinearLayout>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/bar_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:setBarData="@{dataViewModel.graphStartingSensor}"
            />

    </LinearLayout>
</layout>